
<ul>
  <% @tasks.each do |task| %>
    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="exampleCheck1" <%= task.completed ? 'checked' : ''%>>
      <label class="form-check-label" for="exampleCheck1">
        <li><%= link_to(task.title, task_path(task)) %></li>
      </label>
    </div>
  <% end %>
</ul>

<%= link_to 'Add a new task', tasks_new_path %>

