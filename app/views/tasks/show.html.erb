<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<div class="form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1" <%= @task.completed ? 'checked' : ''%>>
    <label class="form-check-label" for="exampleCheck1"><%= if @task.completed
        'This task is completed'
       else
        'This task is not yet completed'
       end %></label>
</div>


<%= link_to 'Back to list', tasks_path %>

<%= link_to 'Update this task', edit_task_path(@task)  %>
